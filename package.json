{
	"name": "tg-tokens-vending-machine",
	"version": "1.0.0",
	"private": true,
	"description": "A Telegram bot for dispensing API tokens with SQLite storage and configurable access control",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"build": "npm run build --workspaces",
		"clean": "npm run clean --workspaces",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"prepare": "husky",
		"publish:all": "npm run build && npm run test && npm publish --workspaces",
		"publish:core": "npm run build --workspace=packages/core && npm publish --workspace=packages/core",
		"publish:sqlite": "npm run build --workspace=packages/sqlite-tokens-repository && npm publish --workspace=packages/sqlite-tokens-repository",
		"publish:telegraf": "npm run build --workspace=packages/telegraf-bot-adapter && npm publish --workspace=packages/telegraf-bot-adapter"
	},
	"keywords": [
		"telegram",
		"bot",
		"api",
		"tokens",
		"authentication",
		"sqlite",
		"telegraf",
		"monorepo",
		"typescript"
	],
	"author": "cyberash",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/cyberash/tg-tokens-vending-machine.git"
	},
	"homepage": "https://github.com/cyberash/tg-tokens-vending-machine#readme",
	"bugs": {
		"url": "https://github.com/cyberash/tg-tokens-vending-machine/issues"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@types/jest": "29.5.12",
		"husky": "9.0.11",
		"jest": "29.7.0",
		"lint-staged": "15.2.2",
		"ts-jest": "29.1.2",
		"typescript": "5.4.5"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"lint-staged": {
		"*.{ts,js,json}": [
			"npm run format",
			"npm run lint"
		]
	}
}
